+// EPOS Synchronizer Abstraction Test Program
+
+#include <utility/ostream.h>
+#include <thread.h>
+#include <semaphore.h>
+#include <alarm.h>
+
+using namespace EPOS;
+
+const int iterations = 100;
+
+OStream cout;
+
+const int BUF_SIZE = 16;
+char buffer[BUF_SIZE];
+Semaphore empty(BUF_SIZE);
+Semaphore full(0);
+
+int consumer()
+{
+    int out = 0;
+    for(int i = 0; i < iterations; i++) {
+        full.p();
+        cout << "C<-" << buffer[out] << "\t";
+        out = (out + 1) % BUF_SIZE;
+        Alarm::delay(1000 * out);
+        empty.v();
+    }
+
+    return 0;
+}
+
+int main()
+{
+    Thread * cons = new Thread(&consumer);
+
+    // producer
+    int in = 0;
+    for(int i = 0; i < iterations; i++) {
+        empty.p();
+        Alarm::delay(1000 * in);
+        buffer[in] = 'a' + in;
+        cout << "P->" << buffer[in] << "\t";
+        in = (in + 1) % BUF_SIZE;
+        full.v();
+    }
+
+    cons->join();
+
+    cout << "The end!" << endl;
+
+    delete cons;
+
+    return 0;
+}
